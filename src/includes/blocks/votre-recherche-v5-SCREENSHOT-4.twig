  <div class="d-sm-flex align-items-center">
    <div
      class="preview preview--sm mb-4 mx-auto mx-sm-0 mb-lg-4" data-text="Mode d'emploi">
      {# if logo #}
      <span data-logo class="preview__logo"></span>
      <span class="preview__recherche">
        <span data-search="marque"></span>
        <span data-search="model"></span>
      </span>
      <div class="preview__in"></div>
