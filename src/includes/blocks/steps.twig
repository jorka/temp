    <div class="steps__num">2</div>
    <div class="steps__label">{{ step2Label }}</div>
  </div>
  <div class="steps__item {% if step > 3 and step is not empty  %}is-done{% endif %} {% if step == 3 %}is-active{% endif %}">
    <div class="steps__num">3</div>
    <div class="steps__label">{{ step3Label }}</div>
  </div>
</div>
