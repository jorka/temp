{% macro picture(filename, className, altText) %}
  <picture>
    <source srcset="{{ filename | split('.')[0] }}.webp 1x, {{ filename | split('.')[0] }}@2x.webp 2x" type="image/webp"/>
    <source srcset="{{ filename }}" type="image/png"/>
    <img src="{{ filename }}" srcset="{{ filename }} 1x, {{ filename | split('.')[0] }}@2x.{{filename | split('.')[1]}} 2x" alt="{{ altText }}" loading="lazy" class="{{ className }}"/>
  </picture>
{% endmacro %}
