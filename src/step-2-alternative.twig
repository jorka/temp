{% extends 'includes/layouts/layout-v8.twig' %}
{% set step = 2 %}
{% set logo = false %}

{% block content %}

  <div class="container step-2-max-width">
    <div class="row mt-3">
      <div class="col-lg-8 mb-4 mb-lg-0">

        <div class="d-flex mb-4 align-items-center">
          <div class="flex-grow-1">
            <h1 class="h2 mb-2">Payer ici</h1>
            <div class="px-4 py-2 rounded d-flex align-items-center bg-danger-light">
              <span class=" mr-2 text-sm">Montant à régler ce jour*&nbsp;:</span>
              <span class="text-danger text-bold h5 mb-0">
                0,90 €
              </span>
            </div>
          </div>
          <div class="flex-shrink-0 d-none d-sm-block ml-4">
            {{ picture('/assets/img/preview-static.png', 'w-24', '') }}
          </div>
        </div>
        {% include "./includes/blocks/payment-form-v2.twig" %}
        <div class="mt-1 text-center">
          <h3 class="font-bold text-sm">Paiement 100% sécurisé</h3>
          <p class="text-xs max-w-lg text-muted mx-auto">Le informamos que sus datos serán tratados por nuestro sitio que actuará en calidad del responsable del tratamiento de los mismos.</p>
          <p class="text-center mt-2">
            {{ picture('assets/img/cards-payment.png', 'mx-auto', '')}}
          </p>
        </div>
      </div>
      <div class="col-lg-4">
        {% include './includes/blocks/votre-recherche-v6.twig' %}
      </div>
    </div>
  </div>
{% endblock %}
